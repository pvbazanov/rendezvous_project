<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReVuProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_red_purple</item>
        <item name="colorPrimaryVariant">@color/pale_purple</item>
        <item name="colorOnPrimary">@color/dark_red_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_honey_yellow</item>
        <item name="colorSecondaryVariant">@color/dark_honey_yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_red_purple</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:navigationBarColor">@color/dark_red_purple</item>
    </style>

    <style name="SecondaryLayoutStyle" parent="Theme.ReVuProject">
        <item name="android:background">@color/bubblegum_pink</item>
    </style>
</resources>