<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle">
        <item name="android:background">@color/pale_red_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="fontFamily"> sans-serif-condensed</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textColor">@color/dark_red_purple</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="NormalStyle">
        <item name="android:textColor">@color/pale_red_purple</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SmallStyle">
        <item name="android:textColor">@color/dark_red_purple</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="MainActivityButtonsStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">13dp</item>
        <item name="backgroundTint">@color/bubblegum_pink</item>
    </style>
</resources>