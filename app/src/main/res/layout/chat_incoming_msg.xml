<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/bubblegum_pink"
        app:cardCornerRadius="10dp"
        android:layout_margin="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/inc_msg_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="0dp"
                style="@style/HeaderStyle"

                android:text="Вика Счастливая"
                />

            <TextView
                android:id="@+id/inc_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="12dp"
                android:paddingTop="4dp"
                style="@style/SmallStyle"

                android:text="Сегодня 14:15"
                />

            <TextView
                android:id="@+id/inc_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inc_msg_author"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                style="@style/NormalStyle"

                android:text="Я задержусь минут на 15, извини пожалуйста"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>