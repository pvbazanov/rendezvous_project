<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="0dp"
    android:layout_alignParentBottom="true"
    android:background="@color/bubblegum_pink"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/chat_one_add_file"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="+" />

    <EditText
        android:id="@+id/chat_one_text"
        android:layout_width="280dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chat_one_add_file"
        android:paddingHorizontal="8dp"
        style="@style/SmallStyle"
        android:textSize="13dp"

        android:hint="Введите сообщение"/>

    <Button
        android:id="@+id/chat_one_send_msg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/SmallStyle"

        android:text="Отпр" />

</androidx.constraintlayout.widget.ConstraintLayout>