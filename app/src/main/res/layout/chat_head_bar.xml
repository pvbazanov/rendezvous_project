<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="0dp"
    android:layout_alignParentTop="true"
    android:background="@color/bubblegum_pink"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#00000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cohb_friend_avatar_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="50dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/cohb_friend_avatar"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/example_photo_friend" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cohb_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/cohb_friend_avatar_card"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="8dp"
                android:layout_marginVertical="8dp"

                android:textSize="25dp"

                android:text="Чат "
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>